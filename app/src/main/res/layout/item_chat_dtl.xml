<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/chat_dtl_leftLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chat_dtl_leftIV"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/chat_dtl_leftTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chat_dtl_leftIV"
            android:background="@mipmap/ic_msg_left"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_dtl_rightLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chat_dtl_rightIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/chat_dtl_rightTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/chat_dtl_rightIV"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_msg_right"/>
    </RelativeLayout>
</RelativeLayout>