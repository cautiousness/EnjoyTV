<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/loc_mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"/>
    <RelativeLayout
        android:id="@+id/loc_locationRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/loc_locationBTN"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_location"
            tools:ignore="RtlHardcoded"/>
    </RelativeLayout>
    <com.fuj.enjoytv.widget.map.MapControlButton
        android:id="@+id/map_mapControlBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loc_locationRL"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        tools:ignore="RtlHardcoded"/>
</RelativeLayout>