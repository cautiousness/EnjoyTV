<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/video_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:id="@+id/record_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">
        <CheckedTextView
            android:id="@+id/video_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dip"
            android:background="@drawable/selector_delete"
            android:button="@null"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/video_record"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@mipmap/ic_record_start"
            android:textSize="16sp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/video_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>
</RelativeLayout>